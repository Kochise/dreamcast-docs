 **  bitset
 **/

#ifndef _BITSET
#define _BITSET

#include <mslconfig>  // hh 990120 new config file
#include <cstddef>
#include <climits>
#include <string>
#include <stdexcept>
#include <iosfwd>

#ifndef RC_INVOKED

#pragma options align=native
#if defined(__CFM68K__) && !defined(__USING_STATIC_LIBS__)
	#pragma import on
